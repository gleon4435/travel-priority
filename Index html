  <!-- Firebase -->
  <script type="module">
    // Import Firebase
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-app.js";
    import { getFirestore, collection, getDocs } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyBXJjmGEsQnmH38M5MajlaryDv2WUksvxc",
      authDomain: "travel-priority.firebaseapp.com",
      projectId: "travel-priority",
      storageBucket: "travel-priority.firebasestorage.app",
      messagingSenderId: "444518575815",
      appId: "1:444518575815:web:edd00cf037e5356bb518e2",
      measurementId: "G-37JET2BR5M"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    async function loadList() {
      const listEl = document.getElementById("countries");
      listEl.innerHTML = "";
      const querySnapshot = await getDocs(collection(db, "countries"));
      querySnapshot.forEach((doc) => {
        const data = doc.data();
        const li = document.createElement("li");
        li.innerHTML = `<span>${data.name}</span><span style="color:${data.color}">${data.color}</span>`;
        listEl.appendChild(li);
      });
    }

    document.addEventListener("DOMContentLoaded", loadList);
  </script>
